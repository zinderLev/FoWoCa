{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/server.ts", "src/serverTools.ts"], // Компилировать все .ts файлы из src
  "exclude": ["node_modules", "src/clientTools.ts", "src/layout.ts"]
}